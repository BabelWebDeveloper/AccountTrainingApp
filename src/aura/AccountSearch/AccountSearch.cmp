<aura:component controller="AccountSearchController">
    <aura:registerEvent name="accountsLoaded" type="c:AccountsLoaded"/>
    <aura:attribute name="searchTerm" type="String" default="Uni"/>
    <div class="alignContainer">
        <lightning:card title="Account Search" iconName="standard:search">
            <div class="slds-text-align_left">
                <div class="slds-grid slds-size_3-of-4">
                    <div class="slds-col slds-m-left_xx-large slds-size_1-of-2">
                        <lightning:input
                                label="Search"
                                variant="label-hidden"
                                value="{!v.searchTerm}"
                                placeholder="Search by name"/>
                    </div>
                    <div class="slds-col slds-m-left_xx-large slds-size_1-of-2">
                        <div class="slds-grid slds-align_absolute-center">
                                <lightning:button onclick="{!c.onSearchTermChange}" class="slds-col">Search</lightning:button>
                                <lightning:button onclick="{!c.clearSearchFields}" class="slds-col">Clear</lightning:button>
                        </div>
                    </div>
                </div>
            </div>
        </lightning:card>
    </div>
</aura:component>